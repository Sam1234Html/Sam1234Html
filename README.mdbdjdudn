<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DOM Manipulation</title>
    <style>
        /* Optional CSS for basic styling */
        body {
            font-family: sans-serif;
            margin: 20px;
        }

        header {
            margin-bottom: 20px;
            text-align: center;
        }

        #content-area {
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .dynamic-paragraph {
            margin-top: 10px;
            padding: 8px;
            background-color: #f9f9f9;
            border: 1px solid #eee;
            border-radius: 3px;
        }

        footer {
            margin-top: 30px;
            text-align: center;
            color: #777;
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome to the Dynamic Page</h1>
        <p class="description">This page demonstrates DOM manipulation with JavaScript.</p>
    </header>

    <main>
        <div id="content-area">
            <p id="dynamic-text">Initial text content.</p>
            <button id="change-text-button">Change Text</button>
            <button id="change-style-button">Change Style</button>
        </div>

        <div id="element-manipulation">
            <button id="add-element-button">Add Paragraph</button>
            <button id="remove-element-button">Remove Last Paragraph</button>
        </div>
    </main>

    <footer>
        <p>&copy; 2025 My Dynamic Page</p>
    </footer>

    <script>
        // Function to change the text content of the dynamic-text paragraph
        function changeText() {
            const dynamicTextElement = document.getElementById('dynamic-text');
            if (dynamicTextElement) {
                dynamicTextElement.textContent = 'The text has been changed dynamically!';
            }
        }

        // Function to change the CSS style of the content-area
        function changeStyle() {
            const contentAreaElement = document.getElementById('content-area');
            if (contentAreaElement) {
                contentAreaElement.style.backgroundColor = '#e0f7fa'; // Light blue background
                contentAreaElement.style.padding = '20px';
                contentAreaElement.style.borderRadius = '5px';
                contentAreaElement.style.border = '1px solid #b2ebf2';
            }
        }

        // Function to add a new paragraph element
        function addParagraph() {
            const elementManipulationArea = document.getElementById('element-manipulation');
            if (elementManipulationArea) {
                const newParagraph = document.createElement('p');
                newParagraph.textContent = 'A new paragraph added dynamically.';
                newParagraph.classList.add('dynamic-paragraph'); // Optional: Add a class for potential styling
                elementManipulationArea.appendChild(newParagraph);
            }
        }

        // Function to remove the last added paragraph element
        function removeLastParagraph() {
            const elementManipulationArea = document.getElementById('element-manipulation');
            if (elementManipulationArea) {
                const dynamicParagraphs = elementManipulationArea.querySelectorAll('.dynamic-paragraph');
                if (dynamicParagraphs.length > 0) {
                    const lastParagraph = dynamicParagraphs[dynamicParagraphs.length - 1];
                    elementManipulationArea.removeChild(lastParagraph);
                } else {
                    alert('No more paragraphs to remove!');
                }
            }
        }

        // Event listeners to trigger the functions when buttons are clicked
        document.addEventListener('DOMContentLoaded', () => {
            const changeTextButton = document.getElementById('change-text-button');
            const changeStyleButton = document.getElementById('change-style-button');
            const addElementButton = document.getElementById('add-element-button');
            const removeElementButton = document.getElementById('remove-element-button');

            if (changeTextButton) {
                changeTextButton.addEventListener('click', changeText);
            }

            if (changeStyleButton) {
                changeStyleButton.addEventListener('click', changeStyle);
            }

            if (addElementButton) {
                addElementButton.addEventListener('click', addParagraph);
            }

            if (removeElementButton) {
                removeElementButton.addEventListener('click', removeLastParagraph);
            }
        });
    </script>
</body>
</html>
