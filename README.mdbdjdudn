<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CSS Animation and Local Storage</title>
    <style>
        .animated-button {
            background-color: #4CAF50;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            position: relative; /* For animation positioning */
        }

        .animated-button.animate {
            animation: pulse 1s ease-in-out infinite alternate;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 1;
            }
            100% {
                transform: scale(1.1);
                opacity: 0.7;
            }
        }
    </style>
</head>
<body>

    <button id="myButton" class="animated-button">Click Me to Animate</button>

    <script>
        const button = document.getElementById('myButton');
        const animationKey = 'animationTriggered';

        // Function to store user preference in localStorage
        function storePreference(key, value) {
            localStorage.setItem(key, JSON.stringify(value));
        }

        // Function to retrieve user preference from localStorage
        function getPreference(key) {
            const storedValue = localStorage.getItem(key);
            return storedValue ? JSON.parse(storedValue) : null;
        }

        // Function to trigger the animation and store the preference
        function triggerAnimation() {
            button.classList.add('animate');
            storePreference(animationKey, true);
        }

        // Check if the animation was triggered previously
        const wasAnimated = getPreference(animationKey);
        if (wasAnimated) {
            button.classList.add('animate');
        }

        // Event listener to trigger the animation on click
        button.addEventListener('click', triggerAnimation);
    </script>

</body>
</html>
